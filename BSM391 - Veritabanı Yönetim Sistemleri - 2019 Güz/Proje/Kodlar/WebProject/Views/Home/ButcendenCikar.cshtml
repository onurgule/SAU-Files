@model WebProject.Models.HomeVar
@{
    ViewBag.Title = "ButcendenCikar";
}
<div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">
        <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">@Resource.ButcedenCikart</h5>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group row">
                            <label for="butcesec" class="col-3 col-lg-2 col-form-label text-right">@Resource.ButceSeciniz</label>
                            <div class="col-9 col-lg-10">
                                @Html.DropDownListFor(x => x.actionn.BID, new SelectList(Model.listBudgets, "BID", "Name", Model.user.DefaultBudget), new { @class = "form-control", @required = "true" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="miktar" class="col-3 col-lg-2 col-form-label text-right">@Resource.Miktar</label>
                            <div class="col-9 col-lg-10">
                                @Html.TextBoxFor(x => x.actionn.Amount, new { @class = "form-control", @required = "true", @type = "number" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="detay" class="col-3 col-lg-2 col-form-label text-right">@Resource.Detay</label>
                            <div class="col-9 col-lg-10">
                                @Html.TextBoxFor(x => x.actionn.Description, new { @class = "form-control", @required = "true" })
                            </div>
                        </div>


                        <div class="row pt-2 pt-sm-5 mt-1">
                            <div class="col-sm-6 pl-0">
                                <p class="text-right">
                                    <button type="submit" class="btn btn-space btn-primary">@Resource.ButcedenCikart</button>
                                    <button class="btn btn-space btn-secondary">@Resource.Iptal</button>
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>